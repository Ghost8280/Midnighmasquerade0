modules = ["web", "nodejs-20", "bash"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SimpleServer"

[[workflows.workflow]]
name = "SimpleServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node simple_server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
run = ["sh", "-c", "chmod +x clone_and_run.sh && ./clone_and_run.sh"]

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
